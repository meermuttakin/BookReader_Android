<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4183D7"
    tools:context=".TaskFirst">

    <TextView
        android:id="@+id/taskinfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="TASK INFORMATION - 1"
        android:background="#000000"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/taskheader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="10dp"
        android:text="@string/first_page"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />


    <TextView
        android:id="@+id/warn_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="186dp"
        android:layout_marginLeft="10dp"
        android:text="@string/warnings"
        android:textColor="#f40707"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/startid1"
        android:layout_width="153dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="46dp"
        android:text="START"
        android:textStyle="bold" />


</RelativeLayout>